<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <h1>I like Burgers!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <img src="/assets/img/burger1.png" class="img-responsive" alt="burger">
    </div>
  </div>

<div class="row">
    <div class="col-sm-4">
      <h2>Burger List</h2>

        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="eaten" value="1">
            <button type="submit">Devour It!</button>
            </form>

       
          </li>
          {{/unless}}
          {{/each}}
        </ul>
    </div>

  <div class="col-sm-4">
    <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
  </div>


  <div class="col-sm-4">
    <h2>Devoured Burgers</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="eaten" value="0">
              <button type="submit">Return to List</button>
            </form>

          
          </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>